{
  "manifest_version": 3,
  "name": "Google Search Location Simulator",
  "version": "1.0",
  "description": "Adds a uule parameter to Google search URLs for location simulation",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://www.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/*"],
      "js": ["content.js"]
    }
  ]
}